{
  "name": "@zenbusiness/monorepo-sandbox",
  "private": true,
  "version": "0.0.0",
  "description": "Playground for experimenting with nodejs monorepo tools",
  "author": "Jocelyn Badgley <jocelyn.badgley@zenbusiness.com>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/zenbusiness/monorepo-sandbox.git"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "workspaces": [
    "./packages/*",
    "jest-resolver"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "release": {
    "extends": "@zenbusiness/semantic-release-config"
  },
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "docs": "npm run docs --workspaces --if-present",
    "release": "npm run prepublish --workspaces --if-present && multi-semantic-release",
    "prepublishOnly": "echo \"Error: 'npm publish' is not supported, use 'npm run release'.\" && exit 1"
  },
  "devDependencies": {
    "@zenbusiness/semantic-release-config": "^1.2.0",
    "multi-semantic-release": "2.13.0"
  }
}
